#include<iostream>
using namespace std;

class Doctor {
    string name;
    string specialization;
    int experience;

public:
    Doctor() : name(""), specialization(""), experience(0) {}

    Doctor(string name, string specialization, int experience) {
        this->name = name;
        this->specialization = specialization;
        this->experience = experience;
    }

    void display() {
        cout << "Name: " << name << endl;
        cout << "Specialization: " << specialization << endl;
        cout << "Years Of Experience: " << experience << endl;
    }
};

class Hospital {
    Doctor* doctors;
    int count;
    int capacity;

public:
    Hospital() {
        capacity = 10;
        doctors = new Doctor[capacity];
        count = 0;
    }

    void addDoc(Doctor &doc) {
        if (count < capacity) {
            doctors[count++] = doc;
        } else {
            cout << "Hospital is full. Cannot add more doctors." << endl;
        }
    }

    void display() {
        cout << "Doctors Details: " << endl;
        for (int i = 0; i < count; i++) {
            doctors[i].display();
            cout << endl << endl;
        }
    }

    ~Hospital() {
        delete[] doctors;
    }
};

int main() {
    Doctor d1("John Doe", "Cardiology", 10);
    Doctor d2("Jane Smith", "Neurology", 15);
    Doctor d3("Alice Johnson", "Pediatrics", 8);

    Hospital h;
    h.addDoc(d1);
    h.addDoc(d2);
    h.addDoc(d3);

    h.display();

    return 0;
}
